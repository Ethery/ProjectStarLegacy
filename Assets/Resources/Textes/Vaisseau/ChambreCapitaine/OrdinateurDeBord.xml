          <Retour>true</Retour>
        </Phrase>
        <Retour>true</Retour>
      </Reponse>
      <Reponse>
        <TexteReponse>Rappelle moi notre objectif.</TexteReponse>
        <Phrase>
          <Emotion>Passif</Emotion>
          <Texte>[key:ObjectifCourant]</Texte>
          <Reponses/>
        </Phrase>
        <Retour>false</Retour>
      </Reponse>
    </Reponses>
